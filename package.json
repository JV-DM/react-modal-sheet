{
  "version": "3.5.0",
  "license": "MIT",
  "name": "react-modal-sheet",
  "description": "Flexible bottom sheet component for your React apps",
  "author": "Teemu Taskula",
  "repository": "https://github.com/Temzasse/react-modal-sheet",
  "homepage": "https://temzasse.github.io/react-modal-sheet",
  "keywords": [
    "react",
    "modal",
    "bottom-sheet",
    "accessibility",
    "framer-motion"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist", "src"],
  "scripts": {
    "dev": "tsup --watch --onSuccess \"yalc publish --push\"",
    "prebuild": "npm run verify",
    "build": "tsup",
    "postbuild": "attw --pack .",
    "format:check": "biome format ./src",
    "format:write": "biome format --write ./src",
    "lint:check": "biome lint --error-on-warnings ./src",
    "lint:write": "biome lint --error-on-warnings  --write ./src",
    "link": "yalc publish && npm run link:example && npm run link:example-ssr",
    "link:example": "cd example && yalc add react-modal-sheet && npm i",
    "link:example-ssr": "cd example-ssr && yalc add react-modal-sheet && npm i",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "release": "npm run build && np",
    "verify": "run-p format:check lint:check typecheck",
    "prepare": "husky"
  },
  "peerDependencies": {
    "framer-motion": ">=10",
    "react": ">=16"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.17.2",
    "@biomejs/biome": "1.9.4",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@vitejs/plugin-react": "4.3.4",
    "csstype": "3.1.3",
    "framer-motion": "11.15.0",
    "husky": "9.1.7",
    "jsdom": "25.0.1",
    "npm-run-all": "4.1.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vite": "6.0.6",
    "vitest": "2.1.8"
  },
  "engines": {
    "node": ">=22"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
